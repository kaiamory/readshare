<%= search_form_for @q, :class => collapse_search_form, :id => "books_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id, "User" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :user_id_gteq, :class => "form-control", :placeholder => "User greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :user_id_lteq, :class => "form-control", :placeholder => "User less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :page_length_cont, "Page length contains" %>
    <%= f.text_field :page_length_cont, :class => "form-control", :placeholder => "Page length contains" %>
  </div>

  <div class="form-group">
    <%= f.label :genre_cont, "Genre contains" %>
    <%= f.text_field :genre_cont, :class => "form-control", :placeholder => "Genre contains" %>
  </div>

  <div class="form-group">
    <%= f.label :author_cont, "Author contains" %>
    <%= f.text_field :author_cont, :class => "form-control", :placeholder => "Author contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :author_writer_name_cont, "Author writer name contains" %>
    <%= f.text_field :author_writer_name_cont, :class => "form-control", :placeholder => "Author writer name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :users_email_cont, "Users email contains" %>
    <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "Users email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :user_readers_email_cont, "User readers email contains" %>
    <%= f.text_field :user_readers_email_cont, :class => "form-control", :placeholder => "User readers email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/books" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#books_filters">
  Show filters
</a>
