<div class="card mb-3">
  <h2 class="card-header h4">
    Book #<%= book.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= book.name %></dd>

      <dt>Author</dt>
      <dd><%= book.author %></dd>

      <dt>Genre</dt>
      <dd><%= book.genre %></dd>

      <dt>Page length</dt>
      <dd><%= book.page_length %></dd>

      <dt>User</dt>
      <dd><%= book.user_id %></dd>

      <dt>Author</dt>
      <dd>
        <% if @book.author_writer.present? %>
          <%= link_to book.author_writer, book.author_writer %>
        <% end %>
      </dd>

      <dt>Book cover</dt>
      <dd>
        <%= cl_image_tag @book.book_cover, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back book, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_book_url(book), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to book, method: :delete, data: { confirm: "Do you really want to delete this book?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(book.updated_at) %> ago
  </div>
</div>
