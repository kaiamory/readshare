<div class="card mb-3">
  <h2 class="card-header h4">
    Review #<%= review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @review.user.present? %>
          <%= link_to review.user, review.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Rating</dt>
      <!-- Display rating start -->
      <dd><%= review.rating %></dd>
      <!-- Display rating end -->

      <dt>Body</dt>
      <!-- Display body start -->
      <dd><%= review.body %></dd>
      <!-- Display body end -->

      <dt>Book</dt>
      <!-- Display book_id start -->
      <dd>
        <% if @review.book.present? %>
          <%= link_to review.book, review.book %>
        <% end %>
      </dd>
      <!-- Display book_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link review start -->
      <div class="col">
        <% if current_user == @review.user %>
          <%= link_to edit_review_url(review), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link review end -->

      <!-- Delete link review start -->
      <div class="col">
        <% if current_user == @review.user %>
          <%= link_to review, method: :delete, data: { confirm: "Do you really want to delete this review?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link review end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(review.updated_at) %> ago
  </div>
</div>
