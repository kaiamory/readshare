<% was_validated = author.errors.any? %>

<%= form_with(model: author, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = author.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% author.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% headshot_class = "form-control" %>
    <% headshot_was_invalid = author.errors.include?(:headshot) %>

    <% if was_validated %>
      <% if headshot_was_invalid %>
        <% headshot_class << " is-invalid" %>
      <% else %>
        <% headshot_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :headshot %>
    <%= f.file_field :headshot, class: "form-control" %>
    <% if headshot_was_invalid %>
      <% author.errors.full_messages_for(:headshot).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
