<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Books

    <a data-toggle="collapse" href="#author_books_new_form">
      Add book
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @author.books.each do |book| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to book, book %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to book, method: :delete, data: { confirm: "Do you really want to delete this book" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="author_books_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
